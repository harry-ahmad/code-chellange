<h2>Sales</h2>
<form method="POST" id="event_upload_form" enctype="multipart/form-data">
    <div>
        <div>
            <input type="file" id="file" accept="application/json" name="importfile">
            <button type="button" id="import">Import</button>
        </div>
    </div>
</form>
{% if salesList | default(null) %}
    <div>
        <table>
            <thead>
            <tr>
                <th>Date</th>
                <th>Customer Name</th>
                <th>Customer Email</th>
                <th>Product Name</th>
                <th>Product Price</th>

            </tr>
            </thead>
            <tbody id="sales_list">
            {% set totalPrice = 0 %}
            {% for sale in salesList %}
                {% set totalPrice = totalPrice + sale.productPrice %}
                <tr>
                    <td>{{ sale.saleDate | date("m/d/Y h:i a", sale.timezone) }}</td>
                    <td>{{ sale.customerName }}</td>
                    <td>{{ sale.customerMail }}</td>
                    <td>{{ sale.productName }}</td>
                    <td>{{ sale.productPrice }}</td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="4" rowspan="3">
                    Total Price
                </td>
                <td>{{ totalPrice }}</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endif %}
